<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints maxWidth="-Infinity" prefWidth="50.0" />
      <ColumnConstraints maxWidth="-Infinity" prefWidth="50.0" />
      <ColumnConstraints maxWidth="-Infinity" minWidth="10.0" prefWidth="50.0" />
      <ColumnConstraints maxWidth="-Infinity" minWidth="10.0" prefWidth="50.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <TextField GridPane.columnSpan="3" />
      <Button fx:id="button1" onAction="#onOperandButtonClick" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="1" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="button2" onAction="#onOperandButtonClick" mnemonicParsing="false" text="2" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="button3" onAction="#onOperandButtonClick" mnemonicParsing="false" text="3" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="button4" onAction="#onOperandButtonClick" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="4" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <Button fx:id="button5" onAction="#onOperandButtonClick" mnemonicParsing="false" text="5" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <Button fx:id="button6" onAction="#onOperandButtonClick" mnemonicParsing="false" text="6" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></Button>
      <Button fx:id="button7" onAction="#onOperandButtonClick" mnemonicParsing="false" text="7" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="button8" onAction="#onOperandButtonClick" mnemonicParsing="false" text="8" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="button9" onAction="#onOperandButtonClick" mnemonicParsing="false" text="9" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="button0" onAction="#onOperandButtonClick" mnemonicParsing="false" text="0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
      <Button fx:id="buttonAdd" onAction="#onOperatorButtonClick" mnemonicParsing="false" text="+" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="buttonSubtract" onAction="#onOperatorButtonClick" mnemonicParsing="false" text="-" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <Button fx:id="buttonMultiply" onAction="#onOperatorButtonClick" mnemonicParsing="false" text="*" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="buttonDivide" onAction="#onOperatorButtonClick" mnemonicParsing="false" text="/" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
      <Button fx:id="buttonEnter" onAction="#onEnterButtonClick" mnemonicParsing="false" text="Enter" GridPane.columnIndex="3" GridPane.halignment="CENTER" />
      <Button fx:id="buttonStore" onAction="#onStoreRetrieveButtonClick" mnemonicParsing="false" prefWidth="100.0" text="Store" GridPane.columnSpan="2" GridPane.rowIndex="6" />
      <Button fx:id="buttonRetrieve" onAction="#onStoreRetrieveButtonClick" mnemonicParsing="false" prefWidth="100.0" text="Retrieve" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="6" />
   </children>
</GridPane>
